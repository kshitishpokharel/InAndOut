
@{
    ViewData["Title"] = "ExpenseIndex";
}

@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expense List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Add new Expense</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense ID
                    </th>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Expense Amount
                    </th>
                    </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Id</td>
                        <td width="30%">@item.ExpenseName</td>
                        <td width="30%">@item.ExpenseAmount</td>
                        <td width="30%"><a asp-controller="Expense" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary">Update</a></td>
                        <td width="30%"><a asp-controller="Expense" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <p>No items created yet</p>
    }

</div>

